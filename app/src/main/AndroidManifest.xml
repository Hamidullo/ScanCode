<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.criminal_code.scancode">

    <uses-permission android:name="android.permission.CAMERA" />

    <application
        android:allowBackup="true"
        android:name=".app.MyApp"
        android:icon="@drawable/image11"
        android:label="@string/app_name"
        android:roundIcon="@drawable/image11"
        android:supportsRtl="true"
        android:theme="@style/Theme.ScanCode">
        <activity
            android:name=".ui.activity.GoodsActivity"
            android:label="@string/title_activity_goods"
            android:theme="@style/Theme.ScanCode.NoActionBar"></activity>
        <activity android:name=".ui.activity.ScanCodeActivity" />
        <activity android:name=".ui.activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>